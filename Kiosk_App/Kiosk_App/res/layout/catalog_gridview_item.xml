<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/catalog_gridview_item_cover" android:layout_gravity="center_horizontal"
            android:background="@color/RealWhite"
            android:src="@drawable/catalog_cover_big" android:paddingBottom="@dimen/activity_horizontal_margin"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:padding="20dp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/catalog_gridview_item_name"
            android:text="catalog 1"
            android:gravity="center"
            android:textSize="20sp"
            />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/catalog_gridview_item_size"
            android:text="132 Pages / 45 MB"
            android:gravity="center"
            android:layout_below="@id/catalog_gridview_item_name"
            android:textSize="15sp"
            />
</LinearLayout>