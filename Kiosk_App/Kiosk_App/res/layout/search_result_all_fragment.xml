<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <View android:id="@+id/search_result_all_header"
          android:layout_width="match_parent"
          android:layout_height="1dip"
          android:background="@color/swipe_listview_divider_color"/>

    <de.nexxoo.kiosk_app.layout.SwipeMenuListView
            android:id="@+id/search_result_all_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/RealWhite"
            android:divider="@color/swipe_listview_divider_color"
            android:dividerHeight="1dp"
            android:headerDividersEnabled="true"
            android:cacheColorHint="@android:color/transparent"
            android:smoothScrollbar="true">
    </de.nexxoo.kiosk_app.layout.SwipeMenuListView>
</RelativeLayout>