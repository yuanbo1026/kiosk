<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" >
    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/video_gridview_item_name"
            android:text="Video Tutorial"
            android:gravity="left|top"
            android:layout_alignParentTop="true"
            android:layout_weight="3"
            android:layout_margin="10dp"
            android:textSize="25sp"
            />

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:id="@+id/video_gridview_item_cover"
            android:layout_below="@+id/video_gridview_item_name"
            android:layout_weight="1"
            android:src="@drawable/logo_big" android:visibility="visible"/>

    <LinearLayout android:id="@+id/video_button_layout"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal"
                  android:layout_alignParentBottom="true"
                  android:layout_weight="3">
        <Button android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"
                android:layout_margin="10dp"
                android:text="Download"/>
        <Button android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"
                android:layout_margin="10dp"
                android:text="Play"/>
    </LinearLayout>


    <!--TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/video_gridview_item_size"
            android:text="132 Pages / 45 MB"
            android:gravity="center"
            android:layout_above="@id/video_gridview_item_name"
            android:textSize="15sp"
            /-->
</LinearLayout>